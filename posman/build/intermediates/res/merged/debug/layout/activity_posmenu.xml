<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vn.vietatech.posman.POSMenuActivity" >

    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scrollbars="horizontal|vertical" >

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/vBody"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#FFFFFF"
                android:scrollbars="vertical" >
            </ScrollView>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp" >

        <Button
            android:id="@+id/btnIPlus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey"
            android:text="I+" />

        <Button
            android:id="@+id/btnISub"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey"
            android:text="I-" />

        <Button
            android:id="@+id/btnIx"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey"
            android:text="Ix" />

        <Button
            android:id="@+id/btnMT"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:text="MT" />

        <Button
            android:id="@+id/btnSend"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_yellow"
            android:text="O.S" />

        <EditText
            android:id="@+id/txtPeople"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/textview_money"
            android:focusable="false"
            android:gravity="center"
            android:text="0" >
        </EditText>

        <EditText
            android:id="@+id/txtMoney"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/textview_money"
            android:focusable="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnX"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red_delete"
            android:text="X" />

        <EditText
            android:id="@+id/txtRemark"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_money"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/spinRemark"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background_remark" />

        <Button
            android:id="@+id/btnIR"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_green"
            android:text="IR" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridMainMenu"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:columnWidth="90dp"
        android:horizontalSpacing="1dp"
        android:numColumns="5"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" />

    <GridView
        android:id="@+id/gridSubMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cfffd7"
        android:columnWidth="90dp"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" />

    <LinearLayout
        android:id="@+id/MTLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp" >

        <Spinner
            android:id="@+id/spinTableListMT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/spinner_background_mt" />

        <Button
            android:id="@+id/btnOkMT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_ok"
            android:text="@string/btnOkMT" />

        <Button
            android:id="@+id/btnCancelMT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_cancel"
            android:text="@string/btnCancelMT" />
    </LinearLayout>

</LinearLayout>